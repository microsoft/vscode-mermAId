{
  "name": "copilot-mermaid-diagram",
  "publisher": "Microsoft",
  "displayName": "vscode-mermAId",
  "description": "Exploration into Copilot Chat-powered Diagram Generation",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Chat"
  ],
  "enabledApiProposals": [
    "lmTools"
  ],
  "extensionDependencies": [
    "bierner.markdown-mermaid"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "copilot-diagram.mermAId",
        "fullName": "mermAId Diagrams",
        "name": "mermAId",
        "description": "Work with diagrams in the chat",
        "isSticky": true,
        "supportsToolReferences": true,
        "commands": [
          {
            "name": "uml",
            "description": "Generate a UML diagram"
          }
        ]
      }
    ],
    "languageModelTools": [
      {
        "id": "mermAId_get_symbol_definition",
        "tags": [
          "editors",
          "chat-tools-sample"
        ],
        "name": "get symbol definition",
        "displayName": "Symbol Definition",
        "modelDescription": "Get the definition of a symbol",
        "icon": "$(files)",
        "canBeInvokedManually": true,
        "parametersSchema": {
          "type": "object",
          "properties": {
            "symbols": {
              "type": "string",
              "description": "A list of symbols in the file to get the definition for.",
              "default": "none"
            },
            "currentFilePath": {
              "type": "string",
              "description": "The path to the file where the symbols are found.",
              "default": "none"
            }
          }
        },
        "supportedContentTypes": [
          "text/plain"
        ]
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mermAId-container",
          "title": "Outline (Mermaid)",
          "icon": ""
        }
      ]
    },
    "views": {
      "mermAId-container": [
        {
          "type": "webview",
          "id": "mermaid-outline-diagram",
          "name": "Mermaid Outline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "webpack",
    "watch": "webpack --watch",
    "postinstall": "npx vscode-dts dev",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@types/vscode": "^1.94.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.11.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.2",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@mermaid-js/mermaid-cli": "^11.2.1"
  }
}